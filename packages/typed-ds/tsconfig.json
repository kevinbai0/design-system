{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "composite": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "./build/types",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true 
  },
  "exclude": ["dist/**/*"],
  "include": ["src"]
}

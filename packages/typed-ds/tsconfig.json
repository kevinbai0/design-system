{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "composite": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true 
  },
  "exclude": ["dist/**/*"],
  "include": ["src/**/*"]
}

{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "jsx": "react-jsx",
        "composite": true,
        "emitDeclarationOnly": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": "src",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "useDefineForClassFields": true,
        "forceConsistentCasingInFileNames": true 
    },
    "exclude": ["examples/**/*", "dist/**/*"],
    "include": ["src/**/*"]
}
